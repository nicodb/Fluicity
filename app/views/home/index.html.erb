<% title "Home" %>
<% meta_description %>

<header id="#cover">
  <div class="header-background">
    <div class="header-cover">
      <div class="container">
        <div class="row header-content text-center">
            <h1>Connecting Citizen</h1>
            <p><%= t "index.description"%></p>
            <%= render "shared/newsletter"%>
            <a href="#timeline" alt="Timeline"><%= t 'index.button' %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="home-section">
  <div class="container">
    <div class="row">
      <div class="col-sx-12 col-sm-4">
        <div class="home-skill">
          <i class="icon fa fa-users fa-2"></i>
          <h2><%= t 'index.firstskill.title' %></h2>
          <p><%= t 'index.firstskill.description' %></p>
        </div>
      </div>
      <div class = "col-sx-12 col-sm-4">
        <div class="home-skill">
           <i class="icon fa fa-signal fa-3"></i>
          <h2><%= t 'index.secondskill.title' %></h2>
          <p><%= t 'index.secondskill.description' %></p>
        </div>
      </div>
      <div class = "col-sx-12 col-sm-4">
        <div class="home-skill">
          <i class="icon fa fa-crosshairs fa-2"></i>
          <h2><%= t 'index.thirdskill.title' %></h2>
          <p><%= t 'index.thirdskill.description' %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="cut-quote">
  <div class="cut-cover">
    <div class="container text-center">
      <blockquote><%= t 'index.quote.text' %><small><%= t 'index.quote.author' %></small></blockquote>
    </div>
  </div>
</div>

<%= render "shared/timeline"%>

<section class="section-video">


<div class="cut-video">
  <div class="cut-cover">
    <div class="container-video">
      <div class="cut-scene-video">
        <div class="video-wrapper">
          <iframe width="560" height="315" src="//www.youtube.com/embed/MxribCVXRuI?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="home-wish">
  <div class="container">
    <h2><%= t 'index.calltoaction.text' %></h2>
    <%= link_to new_wish_path do %>
     <%= t 'index.calltoaction.button' %>
    <% end %>
  </div>
</section>
