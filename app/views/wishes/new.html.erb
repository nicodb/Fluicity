<section class="section-wish">
  <div class="wish-cover">
    <div class="container">
      <div class="row wish-form">
        <div class="col-md-6 col-md-offset-3">
          <span> Vous avez des idées pour votre ville ?<br />Exprimez-vous !</span>
          <%= bootstrap_form_for(@wish, class: 'form') do |f| %>
            <% if @wish.user %>
              <%= f.hidden_field :user_id %>
            <% else %>
              <%= f.email_field :email, placeholder: "E-mail", required: true %>
            <% end %>
            <%= f.text_field :city, label: "Ville", id: "user_input_autocomplete_address", placeholder: "Nom de la ville concernée", required: true, class: "form-control" %>
            <%= f.text_area :content, label: "Que souhaitez-vous ?", placeholder: "Décrivez votre voeux, aidez vos élus a améliorer votre ville ", required: true, rows: 5, class: "text-control" %>
            <%= f.submit  "Faites un Voeux !", class: "btn btn-wish"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>