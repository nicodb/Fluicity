<div class = "wish-section">

  <div class = "container">

    <div class = "row form-group col-sm-12">

          <h1> Vous avez des idées pour votre ville? </h1>
          <h2>  Vous n'êtes pas le seul! </h2>

      <%= bootstrap_form_for(@wish, class: 'form') do |f| %>

        <div class = "col-lg-6 form-group">
          <label> </label>
          <% if @wish.user %>
            <%= f.hidden_field :user_id %>
          <% else %>
            <%= f.email_field :email, placeholder: "E-mail", required: true %>
          <% end %>
          <%= f.text_field :city, label: "Ville", id: "user_input_autocomplete_address", placeholder: "Nom de la ville concernée", required: true %>

          <%= f.text_area :content, label: "Que souhaitez-vous ?", placeholder: "Décrivez votre voeux, aidez vos élus a améliorer votre ville ", required: true %>

          <%= f.submit  "Faites un Voeux!", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>