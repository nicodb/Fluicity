  <div class="container">
    <div class="row">
      <%= render 'shared/newsletter' %>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="col-sm-3">
          <ul>
            <li><%= link_to I18n.translate('footer.link_team'), team_path, class: "animsition-link" %></li>
            <li><%= link_to I18n.translate('footer.link_legals'), faq_path, class: "animsition-link" %></li>
            <li><%= link_to I18n.translate('footer.link_cgv'), faq_path, class: "animsition-link" %></li>
          </ul>
        </div>
        <div class="col-sm-3">
          <ul>
            <li><%= link_to I18n.translate('footer.link_wish'), new_wish_path, class: "animsition-link" %></li>
            <li><%= link_to I18n.translate('footer.link_jobs'), jobs_path, class: "animsition-link" %></li>
            <li><%= link_to I18n.translate('footer.link_press'), press_path, class: "animsition-link" %></li>
          </ul>
        </div>
        <div class="col-sm-3">
          <ul>
            <li><%= link_to I18n.translate('footer.link_faq'), faq_path, class: "animsition-link" %></li>
