              <%= link_to "https://www.twitter.com/fluicities/", :class => "animsition-link" do %>
                <%= t 'footer.link_twitter' %>
              <% end %>
            </li>
            <li>
              <i class="fa fa-linkedin"></i>
              <%= link_to "https://www.linkedin.com/company/fluicity", :class => "animsition-link" do %>
                <%= t 'footer.link_linkedin' %>
              <% end %>
