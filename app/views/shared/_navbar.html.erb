<% if params[:action] == 'press' || 'faq' %>
  <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation" id="navbar">
<% else %>
  <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation" id="navbar">
<% end %>
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a id="brand" class="navbar-brand hidden" href="/">
        <%= image_tag "fluicity_2.png", id: "logo" %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to contact_path do %>
            <i class="fa fa-envelope-o"></i><%= t 'menu.contact'%>
          <% end %>
        </li>
      <ul class="nav navbar-nav navbar-middle">
        <li>
          <%= link_to new_wish_path do %>
            <i class="fa fa-quote-left"></i><%= t 'menu.wish'%>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-middle">
        <li>
          <%= link_to press_path do %>
            <i class="fa fa-bookmark"></i><%= t 'menu.press'%>
          <% end %>
        </li>
      </ul>
      <% if I18n.locale == :fr %>
      <ul class="nav navbar-nav navbar-middle">
        <li>
          <%= link_to faq_path do %>
            <i class="fa fa-cog"></i><%= t 'menu.faq'%>
          <% end %>
        </li>
      </ul>
      <% end %>
      <ul class="nav navbar-nav">
        <li class="dropdown" id="last-link">
          <a href="#" class="dropdown-toggle free" data-toggle="dropdown">
            <i class="fa fa-globe"></i>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <a href="/"><%= t 'menu.language.french' %></a>
            </li>
            <li>
              <a href="/en"><%= t 'menu.language.english' %></a>
            </li>
            <li>
              <a href="/nl"><%= t 'menu.language.dutch' %></a>
            </li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
